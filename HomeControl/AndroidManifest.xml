<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.kesler.homecontrol"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="me.kesler.homecontrol.HousesActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.kesler.homecontrol.RoomsActivity"
            android:label="@string/title_activity_rooms"
            android:launchMode="singleTop"
            android:parentActivityName="me.kesler.homecontrol.HousesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.kesler.homecontrol.HousesActivity" />
        </activity>
        <activity
            android:name="me.kesler.homecontrol.ControlersActivity"
            android:label="@string/title_activity_controlers"
            android:launchMode="singleTop"
            android:parentActivityName="me.kesler.homecontrol.RoomsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.kesler.homecontrol.RoomsActivity" />
        </activity>
        <activity
            android:name="me.kesler.homecontrol.EditHouseActivity"
            android:label="@string/title_activity_edit_house"
            android:parentActivityName="me.kesler.homecontrol.HousesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.kesler.homecontrol.HousesActivity" />
        </activity>
        <activity
            android:name="me.kesler.homecontrol.EditRoomActivity"
            android:label="@string/title_activity_edit_room"
            android:parentActivityName="me.kesler.homecontrol.RoomsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.kesler.homecontrol.RoomsActivity" />
        </activity>
        <activity
            android:name="me.kesler.homecontrol.EditLightSwitchActivity"
            android:label="@string/title_activity_edit_light_switch"
            android:parentActivityName="me.kesler.homecontrol.ControlersActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.kesler.homecontrol.ControlersActivity" />
        </activity>
        <activity
            android:name="me.kesler.homecontrol.RoomListActivity"
            android:label="@string/title_room_list"
            android:parentActivityName="me.kesler.homecontrol.HousesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.kesler.homecontrol.HousesActivity" />
        </activity>
        <activity
            android:name="me.kesler.homecontrol.RoomDetailActivity"
            android:label="@string/title_room_detail"
            android:parentActivityName="me.kesler.homecontrol.RoomListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.kesler.homecontrol.RoomListActivity" />
        </activity>
    </application>

</manifest>
